<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    tools:context="com.example.appointment_management.MainActivity">


    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></CalendarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar"
        app:layout_constraintVertical_bias="0.448">

        <Button
            android:id="@+id/createBtn"
            android:layout_width="350dp"
            android:layout_marginLeft="31dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:text="CREATE APPOINTMENT" />

        <Button
            android:id="@+id/editBtn"
            android:layout_width="350dp"
            android:layout_marginLeft="31dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:text="VIEW/EDIT APPOINTMENT" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="350dp"
            android:layout_marginLeft="31dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:text="DELETE APPOINTMENT" />

        <Button
            android:id="@+id/moveBtn"
            android:layout_width="350dp"
            android:layout_marginLeft="31dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:text="MOVE APPOINTMENT" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="350dp"
            android:layout_marginLeft="31dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_bg"
            android:text="SEARCH APPOINTMENT" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
